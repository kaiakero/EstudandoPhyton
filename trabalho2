
program trab2;
const TAM = 3;

type
    funcionario = record
                  nome : string;
                  salario : real;
                  cargo : integer;
                  
                end;
    VET = array[1..TAM] of funcionario;            
var
    func : VET;
    cont, i, fcargo : integer;
    resp : char;
    media : real;
    
    procedure le_vetor (var func : VET; var i : integer);
        begin 

        

            repeat
                i := i + 1;
                
                
                    writeln('Informe o nome do ',i,'°   funcionario');
                    readln (func[i].nome);
                    writeln('Informe o salario do ',i,'°   funcionario');
                    readln (func[i].salario);
                    writeln('Informe o cargo do ',i,'°   funcionario');
                    readln (func[i].cargo);
                    writeln('deseja continuar? S/N');
                    readln (resp);
                until (cont = TAM) or (resp = 'N');
        end;
        
        function media_vetor(func : VET; fcargo : integer;i : integer): real;
            var x, b, ind : integer;
                soma : real;
                
                begin
                    ind :=0;
                    soma:=0;
                        for x:=1 to TAM do
                            if func[i].cargo = fcargo then
                                for b:=1 to TAM do
                                    ind := ind + 1;
                                    soma:=soma+func[i].salario;
                                
                    media_vetor:=soma/ind
                end;

    procedure exibe_vetor (func : VET);
        var i : integer;
        begin
            writeln('Valores armazenados');
            for i := 1 to TAM do
                begin
                    writeln('nome do ',i,'° funcionario ',func[i].nome);
                    writeln('preco do ',i,'° funcionario R$',func[i].salario:0:2);
                    writeln('codigo do ',i,'° funcionario ',func[i].cargo);
                end; 
        end;







begin
    i:=0;
    le_vetor(func,i);
    writeln('informe o cargo que voce deseja a media salarial');
    readln(fcargo);
    media := media_vetor(func,i,fcargo);
    writeln(media);
    exibe_vetor(func);
    
    readln();
    

end.

